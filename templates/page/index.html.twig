{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Page index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Number</th>

            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td>{{ page.NumPage }}</td>

                <td>
                    <a class="btn btn-primary" href="{{ path('app_page_show', {'id': page.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_page_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_page_new') }}">Create new page</a>
{% endblock %}
