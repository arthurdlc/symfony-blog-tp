{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>
    
    {% for formation in formations %}
    {% set number = 0 %}
        <div class="accordion" id="accordionExample">
            
            {% set number = number + 1 %}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse {{number}}" data-bs-target="#collapse{{ formation.id }}" aria-expanded="true" aria-controls="collapse-{{ formation.id }}">
                        {{ formation.name }}
                    </button>
                </h2>
                <div id="collapse-{{ formation.id }}" class="accordion-collapse collapse {% if number < 2 %} show {% endif %}" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {{ 'Content'|trans}} : {{ formation.content }}<br><strong>
                        {{ 'Start Date'|trans}} : {{ formation.startDate ? formation.startDate|date('Y-m-d à H:i') : '' }} <br>
                        {{ 'End Date '|trans}} : {{ formation.endDate ? formation.endDate|date('Y-m-d à H:i') : '' }} <br>
                        {{ 'Capacity'|trans}} : {{ formation.capacity }} <br>
                        {{ 'Price'|trans}} : {{ formation.price }}</strong>
                        <br><a href="/formation/pdf/{{formation.id}}" class="btn btn-primary">{{'Download PDF'|trans}}</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
